<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:components="components.*"
		 creationComplete="Home_creationCompleteHandler(event)">
	<fx:Script>
		<![CDATA[
			//imports classes needed for component
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			//sets current state to Home1 when component is loaded
			protected function Home_creationCompleteHandler(event:FlexEvent):void{
				currentState = 'Home1';
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<s:states>
		<s:State name="Home1"/>
		<s:State name="Home2"/>
		<s:State name="Home3"/>
		<s:State name="Home4"/>
	</s:states>
	<fx:DesignLayer>
		<s:SkinnableContainer id="home" x="0" y="0" height.Home2="300" x.Home2="500" y.Home2="300" width.Home2="400"
							   height="220" width="140" skinClass="skins.Panel" />
		<s:RichText color="#2B4381" fontFamily="Arial" fontSize="20" id="QueryMenu" tabStops="S0 S50 S100" text="Create A New Query" x="615" y="325" includeIn="Home2"/>
		<s:RichText color="#2B4381" fontFamily="Arial" fontSize="20" id="HomeLabel" tabStops="S0 S50 S100" text="Home" x="43" y="100" includeIn="Home1, Home3,Home4"/>
	</fx:DesignLayer>	
	
	
	
	<s:transitions>
		<s:Transition autoReverse="true" fromState="Home1" toState="Home2">
			<s:Parallel>
				<s:Parallel target="{home}">
					<s:Move autoCenterTransform="true" duration="1000" startDelay="500"/>
					<s:Resize duration="1000" startDelay="600"/>
				</s:Parallel>
				<s:Parallel target="{HomeLabel}">
					<s:Fade duration="500" startDelay="0"/>
				</s:Parallel>
				<s:Parallel target="{QueryMenu}">
					<s:Fade duration="500" startDelay="1600"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
		<s:Transition autoReverse="true" fromState="Home2" toState="Home3">
			<s:Parallel>	
				<s:Parallel target="{home}">
					<s:Move autoCenterTransform="true" duration="1100" startDelay="800"/>
					<s:Resize duration="1200" startDelay="800"/>
				</s:Parallel>
				<s:Parallel target="{HomeLabel}">
					<s:Fade duration="600" startDelay="2000"/>
				</s:Parallel>
				<s:Parallel target="{QueryMenu}">
					<s:Fade duration="800" startDelay="0"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
		<s:Transition autoReverse="true" fromState="Home3" toState="Home2">
			<s:Parallel>
				<s:Parallel target="{home}">
					<s:Move autoCenterTransform="true" duration="1000" startDelay="500"/>
					<s:Resize duration="1000" startDelay="600"/>
				</s:Parallel>
				<s:Parallel target="{HomeLabel}">
					<s:Fade duration="500" startDelay="0"/>
				</s:Parallel>
				<s:Parallel target="{QueryMenu}">
					<s:Fade duration="500" startDelay="1600"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
		<s:Transition autoReverse="true" fromState="Home4" toState="Home2">
			<s:Parallel>
				<s:Parallel target="{home}">
					<s:Move autoCenterTransform="true" duration="1000" startDelay="1500"/>
					<s:Resize duration="1000" startDelay="1600"/>
				</s:Parallel>
				<s:Parallel target="{HomeLabel}">
					<s:Fade duration="1500" startDelay="0"/>
				</s:Parallel>
				<s:Parallel target="{QueryMenu}">
					<s:Fade duration="500" startDelay="2600"/>
				</s:Parallel>
			</s:Parallel>			
		</s:Transition>
	</s:transitions>
</s:Group>

<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false"
				xmlns:local="*" height="42" width="113">
	
	<s:states>
		<s:State name="normal" />
		<s:State name="down" />
		<s:State name="selected"/>
	</s:states>
	<s:Group>
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle"/>
		</s:layout>
		<s:SkinnableContainer height="30" width="100%" >
			<local:buttonsmall />
			
			<s:Label text="{data.label}" color="#dddddd" width="100%" height="100%" textAlign="center" fontSize="12" verticalAlign="middle"/>
		</s:SkinnableContainer>
	</s:Group>
	
</s:ItemRenderer>

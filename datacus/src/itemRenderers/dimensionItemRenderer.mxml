<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="false">
	
	<s:states>
		<s:State name="normal" />
		<s:State name="down" />
		<s:State name="selected"/>
	</s:states>
	<s:Group>
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle"/>
		</s:layout>
		<s:BorderContainer  borderStyle="inset" height="25" width="100%" cornerRadius="1" borderWeight="3"  >
			<s:backgroundFill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color.normal="#158c1b" color.down="#61b2b5" color.selected="#61b2b5" alpha=".5" />
					<s:GradientEntry color.normal="#075b0c" color.down="#11686c" color.selected="#11686c" alpha=".5" />
				</s:LinearGradient>
				
			</s:backgroundFill>
			
			<s:Label text="{data.label}" width="100%" height="100%" textAlign="center" fontSize="12" verticalAlign="middle"/>
		</s:BorderContainer>
	</s:Group>
	
</s:ItemRenderer>

<?xml version="1.0" encoding="utf-8"?>
<Degrafa:GraphicBoderSkin xmlns:Degrafa="http://www.degrafa.com/2007"
						  xmlns:mx="library://ns.adobe.com/flex/mx" 
						  xmlns:geometry="com.degrafa.geometry.*">
	
	<mx:Script>
		<![CDATA[
		[Bindable]
		private var awidth:Number-0;
		
		[Bindable]
		private var aheight:Number-0;
		
		override protected function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void{
		super.updateDisplayList(unscaledWidth, unscaledHeight);
		awidth = unscaledWidth;
		aheight = unscaledHeight;
		}
		]]>
	</mx:Script>
	
	<Degrafa:SolidStroke id="mainStroke" alpha="1" color="#FFFFFF" caps="round" weight="3"/>
	<Degrafa:SolidFill id="mainFill" alpha="1" color="#FF0000"/>
	<Degrafa:geometry>
		<Degrafa:RegularRectangle width="{awidth}" height="{aheight}" fill="{mainFill}" stroke="mainStroke" />
	</Degrafa:geometry>
</Degrafa:GraphicBoderSkin>

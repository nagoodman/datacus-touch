	<fx:Script>
		<![CDATA[
			import flash.display.Stage;
			
			import org.tuio.*;
			import org.tuio.TouchEvent;
			import org.tuio.TuioClient;
			import org.tuio.connectors.UDPConnector;
			import org.tuio.debug.TuioDebug;
			import org.tuio.mouse.MouseToTouchDispatcher;
			import org.tuio.windows7.*;

			//need to run hook?
			private var tc:TuioClient;
			private var tm:TuioManager;
			private var winTouch:Windows7TouchToTuioDispatcher;
			private var mTouch:MouseToTouchDispatcher;
			private var tDbg:TuioDebug;

			protected function onCreationComplete():void {
				var stage:Stage = this.systemManager.stage;
				//tc = new TuioClient(new UDPConnector());
				tm = TuioManager.init(stage, tc);
				winTouch = new Windows7TouchToTuioDispatcher(stage);
				//mTouch = new MouseToTouchDispatcher(stage);
				tDbg = TuioDebug.init(stage);
				trace("init");
				this.addEventListener(org.tuio.TouchEvent.TOUCH_DOWN, handleDown);
				this.addEventListener(org.tuio.TouchEvent.TOUCH_MOVE, handleMove);
				this.addEventListener(org.tuio.TouchEvent.TOUCH_UP, handleUp);	
			}
			
			
			public function handleDown(e:org.tuio.TouchEvent):void {
				trace("TOUCHDOWN!");
			}
			
			public function handleUp(e:org.tuio.TouchEvent):void {
				trace("TOUCHUP!");
			}
			
			public function handleMove(e:org.tuio.TouchEvent):void {
				trace("moving");
			}
		]]>
	</fx:Script>
